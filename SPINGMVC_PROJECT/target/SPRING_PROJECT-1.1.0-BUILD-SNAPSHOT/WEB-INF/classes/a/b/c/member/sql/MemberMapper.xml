<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="a.b.c.member.sql.MemberMapper">


		<insert id="regist" parameterType="map">
		
				insert into member (
				 name
				  ,age
			      ,gender
				  ,o_file_name
				  ,n_file_name
				) VALUES (
				
				  #{name}
				  ,#{age}  
				  ,#{gender}  
				  ,#{o_file_name}  
				  ,#{n_file_name}  
		
				)
		
		</insert>

		<select id="select_member" parameterType="map" resultType="map">
		
		select * from member 
		<if test="null !=seq">
		where seq = #{seq}
		</if>
		
		<if test="null !=name">
		where name LIKE CONCAT ('%',#{name}, '%')
		</if>
		
		
		order By seq desc
		<if test="null !=sIdx">
		LIMIT #{sIdx},2
		</if>
		</select>
		
		<select id="selectCnt" parameterType="map" resultType="int">
		
		select COUNT(*) from member 
		<if test="null !=seq">
		where seq = #{seq}
		</if>
		
		<if test="null !=name">
		where name LIKE CONCAT ('%',#{name}, '%')
		</if>
		
		order By seq desc

		
		</select>
		
		

		
		
		<delete id="delete_member" parameterType="map">
		
		delete from member where seq=#{seq}
		
		</delete>

	<update id="update_member" parameterType="map">
	
		update member SET
  	name = #{name}
  	,age =#{age}
 	 ,gender = #{gender}
	WHERE seq = #{seq}
	
	</update>
	
	<select id="get_member_info" parameterType="map" resultType="map">
	
	select * from member where seq = #{seq}
	
	
	</select>
	
	
	
	
</mapper>