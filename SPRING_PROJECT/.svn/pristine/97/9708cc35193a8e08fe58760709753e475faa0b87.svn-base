<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cjass.web.member.mybatis.MemberMapper">

	<select id="getAllMember" resultType="java.util.HashMap" parameterType="java.util.HashMap">
	    SELECT 	seq
	    		, name
	    		, id
	    		, password
	    		, phone
	    		, age
	    		, reg_date
	    FROM member
	    <if test="null != seq">
	    WHERE seq = #{seq}
	    </if>
	    <if test="null != id">
	    WHERE id = #{id}
	    </if>
	    <if test="null != name">
	    WHERE name LIKE CONCAT('%', #{name}, '%')
	    </if>
	</select>
	
	<select id="insertMemberPLSQL" statementType="CALLABLE" resultType="int" parameterType="java.util.HashMap">
		call insertMember(
			#{name}
			  ,#{id}
			  ,#{password}
			  ,#{phone}
			  ,#{age}
			  ,DATE_FORMAT(NOW(), '%Y%m%d%h%i')
		)
	</select>
	
	<update id="updateMember" parameterType="java.util.HashMap">
		UPDATE member SET
		  name = #{name}
		  ,id = #{id}
		  ,password = #{password}
		  ,phone = #{phone}
		  ,age = #{age}
		WHERE seq = #{seq}
	</update>
	
	<delete id="deleteMember" parameterType="java.util.HashMap">
		DELETE FROM member
		WHERE seq = #{seq}
	</delete>
	
</mapper>